<%= form_with model: [:question, @response], local: true do |f| %>
  <%= @question.question_text %><br>

  <%= f.label "I agree" %>
  <%= f.radio_button :response_text, 'I agree', checked: true  %>

  <%= f.label "I disagree" %>
  <%= f.radio_button :response_text, 'I disagree' %>

  <%= f.submit 'Save' %>
<% end %>