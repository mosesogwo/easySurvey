<%= form_with model: [:admin, @survey], class: "mt-3" do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title, 'Survey title' %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :end_date, 'Expiry' %>
    </div>
    <div class="col-sm-10">
      <%= f.date_field :end_date %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.submit "Submit", class: "bg-warning"%>
    </div>
  </div>
<% end %>