<div class="container">

  <h4 class="mt-3"><%= @survey.title %></h4>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Question</th>
        <th scope="col">Question Type</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
  <tbody>
    <% @survey.questions.each do |question| %>
      <tr>
        <th scope="row"><%= question.question_no %></th>
        <td><%= question.question_text %></td>
        <td> <%= question.question_type.capitalize %></td>
        <td><%= button_to 'Edit', edit_admin_survey_question_path(@survey, question), method: :get %></td>
        <td>Delete Here</td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="my-3">
    <%= button_to 'Add New Question', new_admin_survey_question_path(@survey), method: :get, class: "btn-warning"%>
  </div>
  
  <div class="my-3">
    <%= button_to 'Generate Survey Report', admin_survey_reports_path(@survey), method: :get, class: "btn-success"%>
  </div>
</div>
