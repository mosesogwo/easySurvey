<%= form_with model: [:admin, :survey, @question], class: "mt-3" do |f| %>

  <div class="form-group form-row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :question_no, "Question Number" %>
    </div>
    <div class="col-sm-10">
      <%= f.number_field :question_no %>
    </div>
  </div>

  <div class="form-group form-row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :question_text, "Question" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :question_text %>
    </div>
  </div>

  <%= f.label :question_type, "Select question type" %>
  <%= select(:question, :question_type, [['Short text', 'short_text'], ['Number', 'number'], ['Scaled', 'scale'], ['Binary', 'binary'], ['Descriptive', 'descriptive']]) %>

  <div class="form-check">
    <%= f.check_box :required, class: "form-check-input" %>
    <%= f.label :required, "Required Question", class: "form-check-label" %>
  </div>
  <%= f.submit "Submit", class: "bg-warning"%>
<% end %>